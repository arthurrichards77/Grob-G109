<?xml version="1.0"?>
 
 <PropertyList>
 
 <pid-controller>
  <name>Bank angle hold</name>
  <debug>false</debug>
  <enable>
   <prop>/autopilot/locks/heading</prop>
   <value>bank-hold</value>
  </enable>
  <input>
   <prop>/orientation/roll-deg</prop>
  </input>
  <reference>/autopilot/settings/target-roll-deg</reference>
  <output>
   <prop>/controls/flight/aileron</prop>
  </output>
  <config>
   <Kp>0.01</Kp>
   <Ti>20.0</Ti>
   <Td>0.0</Td>
   <u_min>-1.0</u_min>
   <u_max>1.0</u_max>
  </config>
 </pid-controller>

 <pid-controller>
  <name>Bank angle hold (for loiter)</name>
  <debug>false</debug>
  <enable>
   <prop>/autopilot/locks/heading</prop>
   <value>loiter</value>
  </enable>
  <input>
   <prop>/orientation/roll-deg</prop>
  </input>
  <reference>/autopilot/internal/target-roll-deg</reference>
  <output>
   <prop>/controls/flight/aileron</prop>
  </output>
  <config>
   <Kp>0.01</Kp>
   <Ti>20.0</Ti>
   <Td>0.0</Td>
   <u_min>-1.0</u_min>
   <u_max>1.0</u_max>
  </config>
 </pid-controller>

 <pid-controller>
  <name>Loiter</name>
  <debug>false</debug>
  <enable>
   <prop>/autopilot/locks/heading</prop>
   <value>loiter</value>
  </enable>
  <input>
   <prop>/autopilot/route-manager/distance-remaining-nm</prop>
  </input>
  <reference>/autopilot/settings/target-loiter-nm</reference>
  <output>
   <prop>/autopilot/internal/target-roll-deg</prop>
  </output>
  <config>
   <Kp>5.0</Kp>
   <Ti>2000.0</Ti>
   <Td>0.0</Td>
   <u_min>-15.0</u_min>
   <u_max>15.0</u_max>
  </config>
 </pid-controller>

 </PropertyList>